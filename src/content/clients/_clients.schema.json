{
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 60
    },
    "excerpt": {
      "type": "string",
      "maxLength": 160
    },
    "language": {
      "type": "string",
      "enum": [
        "en",
        "es",
        "uk",
        "ru",
        "de",
        "fr",
        "nl"
      ]
    },
    "date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "title",
    "excerpt",
    "date"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}